<form action="/figures" method="POST">
<p>
  <label for="figure_name"> Figure Name </label>
  <input type="text" name="figure[name]" id="figure_name">
</p>

<p> Title Section </p>

<p>
<%Title.all.each do |t|%>
<input type="checkbox" name="figure[title_ids][]" id="title_<%= t.id%>" value="<%= t.id%>"/><%= t.name%> </input>
<%end%>
</p>


<p>
  <label for="new_title"> New Title </label>
  <input type="text" name="title[name]" id="new_title">
</p>

<p> Landmark Section </p>

<p>
<%Landmark.all.each do |l|%>
<input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= l.id%>" value="<%= l.id%>"/><%= l.name%> </input>
<%end%>
</p>

<p>
  <label for="new_landmark"> New Landmark </label>
  <input type="text" name="landmark[name]" id="new_landmark">
</p>


<input type="submit" value="Create New Figure">
</form>
